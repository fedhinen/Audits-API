# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ===========================================
# Copia este archivo a .env.production y configura tus valores
# NUNCA subas este archivo con valores reales a Git

# ===========================================
# APLICACIÓN
# ===========================================
APP_NAME="Audits-API"
APP_ENV=production
APP_KEY=base64:GENERAR_CON_php_artisan_key:generate
APP_DEBUG=false
APP_URL=https://tu-dominio.com

# Puerto expuesto de la aplicación (host:container)
APP_PORT=8080

# ===========================================
# BASE DE DATOS
# ===========================================
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=audits_production
DB_USERNAME=audits_user
DB_PASSWORD=TU_PASSWORD_SEGURO_AQUI
DB_ROOT_PASSWORD=TU_ROOT_PASSWORD_SEGURO_AQUI

# Puerto externo para acceder a MySQL (opcional)
DB_EXTERNAL_PORT=3306

# ===========================================
# LOGS
# ===========================================
LOG_CHANNEL=stack
LOG_LEVEL=error

# ===========================================
# CACHE Y SESIONES
# ===========================================
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
QUEUE_CONNECTION=sync

# ===========================================
# SANCTUM (Si usas API authentication)
# ===========================================
SANCTUM_STATEFUL_DOMAINS=tu-dominio.com,www.tu-dominio.com

# ===========================================
# MAIL (Configurar si usas email)
